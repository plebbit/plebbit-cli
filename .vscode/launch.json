{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "args": [
                "--timeout",
                "999999",
                "--config",
                "config/.mocharc.json",
                "-p",
                "${workspaceFolder}/config/tsconfig.json",
                "${workspaceFolder}/test/cli/main.test.ts"
            ],
            "internalConsoleOptions": "openOnFirstSessionStart",
            "console": "integratedTerminal",
            "name": "(CLI) main.test.ts",
            "program": "${workspaceFolder}/node_modules/ts-mocha/bin/ts-mocha",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "type": "node",
            "env": { "DEBUG": "plebbit*" }
        },
        {
            "args": [
                "--timeout",
                "999999",
                "--config",
                "config/.mocharc.json",
                "-p",
                "${workspaceFolder}/config/tsconfig.json",
                "${workspaceFolder}/test/api/subplebbit.test.ts"
            ],
            "internalConsoleOptions": "openOnFirstSessionStart",
            "console": "integratedTerminal",
            "name": "(API) subplebbit.test.ts",
            "program": "${workspaceFolder}/node_modules/ts-mocha/bin/ts-mocha",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "type": "node",
            "env": { "DEBUG": "plebbit*", "PLEBBIT_API_PORT": "32431", "IPFS_PORT": "32429", "IPFS_PUBSUB_PORT": "32427" }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "API dev",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/dist/src/api/server.js",
            "console": "integratedTerminal",

            "env": { "IPFS_PORT": "32429", "IPFS_PUBSUB_PORT": "32427", "PLEBBIT_API_PORT": "32431" }
        }
    ]
}
