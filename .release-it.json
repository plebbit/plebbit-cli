{
    "git": {
        "requireCleanWorkingDir": false,
        "requireCommits": true,
        "commit": false,
        "tagAnnotation": "v${version}",
        "tagArgs": ["--force"]
    },
    "github": {
        "release": true,
        "releaseName": "v${version}"
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "docs/CHANGELOG.md"
        }
    },
    "hooks": {
        "before:git:release": "yarn oclif manifest && yarn oclif readme && git add docs/CHANGELOG.md README.md oclif.manifest.json && git commit -m 'chore(release): ${version} [skip ci]'"
    }
}
