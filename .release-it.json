{
    "git": {
        "assets": ["docs/CHANGELOG.md", "README.md", "oclif.manifest.json"],
        "requireCleanWorkingDir": false,
        "commitMessage": "chore(release): ${version} [skip ci]",
        "requireCommits": true,
        "commit": false
    },
    "github": {
        "release": true
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "docs/CHANGELOG.md"
        }
    },
    "hooks": {
        "before:git:release": "yarn oclif manifest && yarn oclif readme && git add docs/CHANGELOG.md README.md oclif.manifest.json && git commit -m 'chore(release): ${version} [skip ci]'"
    }
}
