{
    "name": "plebbit-cli",
    "version": "0.0.1",
    "description": "Command line interface to Plebbit API",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": "git@github.com:plebbit/plebbit-cli.git",
    "author": "Esteban Abaroa, Rinse",
    "license": "GPL-2.0-only",
    "type": "module",
    "private": false,
    "bin": {
        "plebbit": "./dist/index.js"
    },
    "scripts": {
        "dev": "IPFS_API_ENDPOINT=http://localhost:32429/api/v0 PLEBBIT_API_PORT=32431 nodemon --config config/nodemon.json",
        "build": "tsoa spec-and-routes -c config/tsoa.json && tsc --project config/tsconfig.json",
        "build:watch": "tsc --project config/tsconfig.json --watch",
        "build:executables": "pkg . --out-path executables/",
        "startApi": " node dist/src/api/server.js",
        "startIpfs": "IPFS_API_PORT=32429 IPFS_GATEWAY_PORT=32430 node dist/src/ipfs/startIpfs.js"
    },
    "devDependencies": {
        "@tsconfig/node16-strictest-esm": "1.0.3",
        "@types/express": "4.17.14",
        "@types/fs-extra": "9.0.13",
        "@types/node": "18.8.2",
        "@types/swagger-ui-express": "4.1.3",
        "nodemon": "2.0.20",
        "pkg": "5.8.0",
        "typescript": "4.8.4"
    },
    "dependencies": {
        "@plebbit/plebbit-js": "../plebbit-js/",
        "@plebbit/plebbit-logger": "github:plebbit/plebbit-logger",
        "commander": "9.4.1",
        "env-paths": "3.0.0",
        "express": "4.18.1",
        "fs-extra": "10.1.0",
        "is-ipfs": "7.0.2",
        "swagger-ui-express": "4.5.0",
        "tsoa": "4.1.3"
    }
}
